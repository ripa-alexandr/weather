@using Weather.Website.Extensions
@model Weather.Website.Models.CityViewModel

<div id="header">
    <div id="city-name" data-id=@Model.Id>@Model.Name</div>
</div>
<div id="mainContentBlock">
    <div id="blockDays">
        <div class="tabs">
            @foreach (var item in Model.LastSevenDays)
            {
                <div>
                    <a href="@Url.ActionPattern("Details", "City", @"\/city-\d+")" class="update-container">@item</a>
                </div>
            }
        </div>
        <div class="tabsTop">
            @Html.DropDownList("items", Model.Providers, new { id = "poviders", multiple = "multiple" })
        </div>
        <div class="tabsContent">
            <div class="leftContent"></div>
            <div class="rightContent">
                @Html.Partial("WeatherData", Model.WeatherData)
            </div>
        </div>
        <div class="tabsBottom"></div>
    </div>
</div>